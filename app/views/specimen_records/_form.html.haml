.modal-dialog.modal-lg{ role: 'document' }
  .modal-content
    = form_for specimen_record, remote: true do |f|
      = f.hidden_field :lab_id
      .modal-header
        %h5.modal-title
          = t(:specimen_records)[:form][:header]
        %button.close{ type: 'button', data: { dismiss: 'modal' }, aria: { label: t(:actions)[:close] } }
          %span{ aria: { hidden: 'true' } } &times;
      .modal-body
        .form-group
          = f.label :protocol_id, class: 'required'
          = f.select :protocol_id, lab.protocols, { include_blank: t(:constants)[:select_placeholder] }, class: 'form-control'
        .form-group
          = f.label :release_date, class: 'required'
          = f.text_field :release_date, class: 'form-control', data: { provide: 'datepicker', date_container: '.modal', date_autoclose: 'true' }
        .form-group
          = f.label :release_to, class: 'required'
          = f.text_field :release_to, class: 'form-control'
      .modal-footer
        = f.submit t(:actions)[:release], class: 'btn btn-primary'
        %button.btn.btn-secondary{ data: { dismiss: 'modal' } }
          = t(:actions)[:close]
