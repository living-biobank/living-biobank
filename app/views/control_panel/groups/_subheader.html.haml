%subheader
  .page-title
    = group_breadcrumb(group)
  %ul.nav.subheader-links
    %li.nav-item
      = link_to 'Group Details', group.new_record? ? 'javascript:void(0)' : edit_control_panel_group_path(group, tab: 'details'), class: ['nav-link', params[:tab].blank? || params[:tab] == 'details' ? 'active' : '']
    %li.nav-item
      = link_to 'Honest Brokers', group.new_record? ? 'javascript:void(0)' : edit_control_panel_group_path(group, tab: 'users'), class: ['nav-link', group.new_record? ? 'disabled' : '', params[:tab] == 'users' ? 'active' : '']
    %li.nav-item
      = link_to 'Sources', group.new_record? ? 'javascript:void(0)' : edit_control_panel_group_path(group, tab: 'sources'), class: ['nav-link', group.new_record? ? 'disabled' : '', params[:tab] == 'sources' ? 'active' : '']
    %li.nav-item
      = link_to 'Services', group.new_record? ? 'javascript:void(0)' : edit_control_panel_group_path(group, tab: 'services'), class: ['nav-link', group.new_record? ? 'disabled' : '', params[:tab] == 'services' ? 'active' : '']
