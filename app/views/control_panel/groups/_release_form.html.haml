.modal-dialog.modal-lg{ role: 'document' }
  .modal-content
    = form_for [:control_panel, group], remote: true do |f|

      .modal-header
        %h4.modal-title
          = t('control_panel.groups.form.release_header', name: group.name)
        %button.close{ type: 'button', data: { dismiss: 'modal' }, aria: { label: t(:actions)[:close] } }
          %span{ aria: { hidden: 'true' } } &times;
      .modal-body
        .form-group
          = f.label :name, class: 'required'
          = f.text_field :name, class: 'form-control'
        .form-group
          = f.label :release_email, class: 'required'
          = f.rich_text_area :release_email, class: 'form-control'
          %small.form-text.text-muted
            = t('control_panel.groups.form.release_email_info')
        .form-group.row
          = f.label :notify_when_all_specimens_released, class: 'col-form-label col-6'
          .col-4.offset-2
            = f.check_box :notify_when_all_specimens_released, data: { toggle: 'toggle', on: 'After All Samples Released', off: 'After Each Sample Released', style: 'btn-block' }
      .modal-footer
        = f.submit t('actions.save'), class: 'btn btn-primary'
        %button.btn.btn-secondary{ type: 'button', data: { dismiss: 'modal' } }
          = t('actions.close')
