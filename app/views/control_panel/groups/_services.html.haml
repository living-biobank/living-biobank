.row
  .col-2
    = link_to new_control_panel_group_service_path(group), remote: true, class: 'btn btn-success' do
      = icon('fas', 'plus mr-2')
      = t('control_panel.groups.services.new_service')

  .col-8
    .card
      %table.table.table-bordered.table-hover.mb-0.border-0#groupServices
        %thead
          %tr
            %th.col-5.d-none.d-md-table-cell.border-left-0
              = t('control_panel.groups.services.table.services')
            %th.col-5.d-none.d-md-table-cell
              = t('control_panel.groups.services.table.actions')
        %tbody
          - group.services.each do |service|
            %tr
              %td 
                = service.sparc_service.name
              %td
                .row
                  .col-1       
                    = link_to edit_control_panel_group_service_path(group, service), remote: true, class: 'btn btn-warning' do
                      = icon('fas', 'pencil-alt')
                  .col-1
                    = link_to control_panel_group_service_path(group, service), remote: true, method: :delete, class: 'btn btn-danger' do
                      = icon('fas', 'trash')


