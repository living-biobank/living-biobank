%h5.d-flex.align-items-center.font-weight-bold
  = request_title_display(request)
%hr.mt-0.mb-2
.mb-3
  .d-flex.w-100
    = primary_pi_display(request)

  - if request.protocol.brief_description.present?
    %hr.my-2
    .d-flex.w-100
      = request.protocol.brief_description

= link_to "#{ENV.fetch('SPARC_HOST')}/dashboard/protocols/#{request.protocol_id}", target: :_blank, class: 'd-flex align-items-center' do
  = image_tag 'sparcrequest_icon.ico', width: 12, height: 12, class: 'mr-1'
  = t('requests.table.sparc_link')
