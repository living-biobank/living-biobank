= form_for @sparc_request do |f|
  .panel.panel-default
    .panel-heading
      .panel-title
        Project Information
    .panel-body
      .form-group
        = f.label :short_title
        = f.text_field :short_title, class: 'form-control'
      .form-group
        = f.label :title
        = f.text_field :title, class: 'form-control'
      .form-group
        = f.label :funding_status
        = f.select :funding_status, [['Pending Funding', 'pending'], ['Funded', 'funded']], { include_blank: 'Please select' }, class: 'form-control'
      .form-group
        = f.label :funding_source
        = f.select :funding_source, [['College Department', 'college'], ['Federal', 'federal'], ['Foundation/Organization', 'foundation/org'], ['Industry-Initiated/Industry-Sponsored', 'ind_initiated/ind_sponsored'], ['Investigator-Initiated/Industry-Sponsored', 'inv_initiated/ind_sponsored'], ['Internal Funded Pilot Project', 'internal_funded_pilot'], ['Student Funded Research', 'student_funded_research']], { include_blank: 'Please select' }, class: 'form-control'
      .form-group
        = f.label :start_date, "Estimate Start Date"
        = f.date_field :start_date, class: 'form-control'
      .form-group
        = f.label :end_date, "Estimate End Date"
        = f.date_field :end_date, class: 'form-control'
      .form-group
        = f.label :primary_pi_name, "Primary PI Name"
        = f.search_field :primary_pi_name, class: 'form-control'
  .panel.panel-default
    .panel-heading
      .panel-title
        Specimen Information
    .panel-body
      .form-group
        = f.label :service_id
        = f.select :service_id, options_from_collection_for_select(Service.where(id: ENV.fetch('SERVICE_ID')), 'id', 'name'), { include_blank: 'Please select' }, class: 'form-control'
      .form-group#service_source_typeahead
        = f.label :service_source
        = f.text_field :service_source, place_holder: 'Type to search' , class: 'form-control typeahead'
  .panel.panel-default
    .panel-heading
      .panel-title
        i2b2 Information
    .panel-body
      .form-group
        = f.label :query_name
        = f.select :query_name, options_from_collection_for_select(I2b2QueryName.where(user_id: current_user.net_id).order("create_date DESC"), 'name', 'name'), { include_blank: 'Please select' }, class: 'form-control'
  = f.submit "Submit for inquiry", class: 'btn btn-primary'
