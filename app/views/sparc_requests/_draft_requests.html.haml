.card#draftRequests{ class: draft_requests.any? ? '' : 'd-none' }
  .card-body.d-flex.flex-column
    %h3.card-title
      = t(:requests)[:draft][:header]
    - draft_requests.each do |dr|
      .alert.alert-warning.complete-draft-request{ role: 'alert' }
        = link_to edit_sparc_request_path(dr), remote: true do
          = icon('fas', 'edit')
          = dr.title
        = link_to sparc_request_path(dr), remote: true, method: :delete, title: t(:requests)[:tooltips][:cancel], class: 'text-danger', data: { confirm_swal: true } do
          = icon('fas', 'times')
