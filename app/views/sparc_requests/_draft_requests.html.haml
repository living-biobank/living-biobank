.card#draftRequests{ class: draft_requests.any? ? '' : 'd-none' }
  .card-header.bg-white
    %h3.m-0
      = t(:requests)[:draft][:header]
  .card-body.d-flex.flex-column
    - draft_requests.each do |dr|
      %h4.alert.alert-warning.draft-request{ role: 'alert' }
        = link_to 'javascript:void(0)', class: 'edit-draft-request', data: { url: edit_sparc_request_path(dr) } do
          = icon('fas', 'edit')
          - if dr.title.present?
            = dr.title
          - elsif dr.short_title.present?
            = dr.short_title
          - else
            = t(:requests)[:draft][:placeholder]
        = link_to 'javascript:void(0)', title: t(:requests)[:tooltips][:cancel], class: 'text-danger cancel-draft-request', data: { confirm_swal: true, url: sparc_request_path(dr), method: :delete } do
          = icon('fas', 'trash')
