.card#draftRequests{ class: draft_requests.any? ? '' : 'd-none' }
  .card-body.d-flex.flex-column
    %h3.card-title
      = t(:requests)[:draft][:header]
    - draft_requests.each do |dr|
      .alert.alert-warning.draft-request{ role: 'alert' }
        = link_to edit_sparc_request_path(dr), remote: true, class: 'edit-draft-request' do
          = icon('fas', 'edit')
          - if dr.title.present?
            = dr.title
          - elsif dr.short_title.present?
            = dr.short_title
          - else
            = t(:requests)[:draft][:placeholder]
        = link_to sparc_request_path(dr), remote: true, method: :delete, title: t(:requests)[:tooltips][:cancel], class: 'text-danger cancel-draft-request', data: { confirm_swal: true } do
          = icon('fas', 'trash')
