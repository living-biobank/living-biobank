%main.card
  %table.table.table-bordered.table-hover.mb-0.border-0#groupsTable{ data: { toggle: 'table', url: groups_path(group_filter_params), side_pagination: 'server' } }
    %thead
      %tr
        %th.col-2{ data: { field: 'name', sortable: 'true' } }
          = t('groups.headers.name')
        %th.col-4{ data: { field: 'sources' } }
          = t('groups.headers.sources')
        %th.col-4{ data: { field: 'services' } }
          = t('groups.headers.services')
        %th.text-center.col-1{ data: { field: 'actions' } }
          = t('groups.headers.actions')