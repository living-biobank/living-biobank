- content_for :filters do
  = render 'services/filters', group: group
  

%main.card#groupSection
  %table.table.table-bordered.table-hover.mb-0.border-0#groupServices
    %thead
      %tr
        %th.col-10
          = t('groups.services.table.services')
        %th.col-2.text-center
          = t('groups.services.table.actions')
    %tbody
      - group.services.each do |service|
        %tr
          %td 
            = service.sparc_service.name
          %td.text-center
            = link_to edit_group_service_path(group, service), remote: true, class: 'btn btn-warning mr-1' do
              = icon('fas', 'pencil-alt')
            = link_to group_service_path(group, service), remote: true, method: :delete, class: 'btn btn-danger', data: { confirm_swal: 'true' } do
              = icon('fas', 'trash')


