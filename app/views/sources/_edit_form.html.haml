.modal-dialog{ role: 'document' }
  .modal-content
    = form_for [group, source], remote: true do |f|
      = hidden_field_tag :group_id
      .modal-header
        %h4.modal-title
          = t('groups.sources.form.edit_source', source_name: source.value)
        %button.close{ type: 'button', data: { dismiss: 'modal' }, aria: { label: t(:actions)[:close] } }
          %span{ aria: { hidden: 'true' } } &times;
      .modal-body
        %p
          = t('groups.sources.form.warning')
        .form-group.mb-2
          = f.label t('groups.sources.form.name_placeholder')
          .input-group
            = text_field_tag :name, groups_source_name, class: 'form-control'
        .form-group.mb-2
          = f.label t('groups.sources.form.description_placeholder')
          .input-group
            = text_field_tag :description, groups_source_description, class: 'form-control'
        .form-group.mb-0  
          = f.label t('groups.sources.form.value_placeholder')
          .input-group
            = f.text_field :value, class: 'form-control', id: 'value'
      .modal-footer
        %button.btn.btn-primary<
          = t('actions.save')
        %button.btn.btn-secondary{ type: 'button', data: { dismiss: 'modal' } }
          = t(:actions)[:close]